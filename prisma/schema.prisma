generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id Int @id @default(autoincrement())
  title String
  category String
  original_language String?
  published_year String
  quantity Int?
  publisher String?
  isbn String?
  // author Author @relation(fields: [authorId], references: [id])
}

model Author{
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  country String?
}


model User{
  id String @id @default(uuid())
  firstname String
  lastname String
  email String @unique
  birthdate DateTime 
  status Boolean
  subscription_date DateTime @default(now())
  phone String
}

